<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="supportArticle"
            type="com.tubitv.tools.api.SupportArticle"/>

        <variable
            name="articleView"
            type="com.tubitv.tools.views.ZendeskArticleView"/>
    </data>

    <RelativeLayout
        android:id="@+id/view_zendesk_article_main_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{articleView::onArticleClicked}"
        android:padding="@dimen/view_zendesk_article_padding">

        <LinearLayout
            android:id="@+id/view_zendesk_article_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/view_zendesk_article_bullet_size"
                android:layout_height="@dimen/view_zendesk_article_bullet_size"
                android:background="@drawable/view_zendesk_section_dot"/>

            <TextView
                android:id="@+id/view_zendesk_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/view_zendesk_article_text_padding"
                android:text="@{supportArticle.getTitle}"
                android:textColor="@color/tubi_tv_orange"
                android:textSize="@dimen/view_zendesk_article_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/view_zendesk_article_ll"
            android:layout_alignRight="@+id/view_zendesk_article_ll"
            android:layout_below="@+id/view_zendesk_article_ll"
            android:background="@drawable/view_zendesk_article_click_selector">

        </LinearLayout>
    </RelativeLayout>

</layout>